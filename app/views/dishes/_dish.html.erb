<table class="w-full whitespace-no-wrap" id="<%= dom_id dish %>">
  <thead>
    <tr class="w-full text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b bg-gray-100">
      <th class="p-4 divide-x">Description</th>
      <th class="p-4 divide-x">Price</th>
      <th class="p-4 divide-x">Availabe</th>
      <th class="p-4 divide-x">Active</th>
      <th class="p-4 w-1/6 divide-x">Chef</th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y">
    <tr class="text-gray-700">
      <td class="px-8 py-3"><%= dish.content %></td>
      <td class="px-8 py-3"><%= usa_currancy(dish.unit_price) %></td>
      <td class="px-8 py-3"><%= dish.available ? "YES" : "NO" %></td>
      <td class="px-8 py-3"><%= dish.active ? "YES" : "NO" %></td>
      <td class="py-8 py-3"><%= dish.chef.user.name %>
      </td>
    </tr>
  </tbody>
</table>

<% if dish.categories.empty? %>
  <span>It's not attached to any category</span>
<% else %>
  <div class="w-full">
    <h3 class="text-left font-bold pb-4">Categories</h3>
    <% dish.categories.each do |category| %>
      <%= link_to category.name, category_path(category.id), class: label_tag %>
    <% end %>
  </div>
<% end %>
